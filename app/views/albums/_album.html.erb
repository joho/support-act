<div class="album">
  <div class="image">
    <% if album.image %>
      <%= image_tag album.image %>
    <% end %>
  </div>

  <div class="info">
    <p class="album-name"><%= album.name %></p>
    <p class="album-artist"><%= album.artist.name %></p>

    <p class="album-purchase">
      <% if purchases.any? { |purchase| purchase.album_id == album.id } %>
        Purchased
      <% else %>
        <%= link_to "Mark as Purchased", my_purchase_url(fan.identifier, album.identifier), :rel => :nofollow %>
      <% end %>
    </p>
  </div>
</div>
